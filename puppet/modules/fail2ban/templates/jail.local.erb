[DEFAULT]
ignoreip  = 127.0.0.1/8
bantime   = 600
maxretry  = 5
backend   = auto
destemail = root@localhost

[sshd]
enabled  = true
<% if @osfamily == 'Debian' -%>
logpath  = /var/log/auth.log
<% end -%>
<% if @osfamily == 'RedHat' -%>
logpath  = /var/log/secure
<% end -%>
<% if @osfamily == 'Suse' -%>
logpath  = /var/log/messages
<% end -%>
