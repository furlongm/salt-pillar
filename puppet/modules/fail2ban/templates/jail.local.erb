[DEFAULT]
ignoreip  = 127.0.0.1/8
bantime   = 600
maxretry  = 5
backend   = auto
destemail = root@localhost

[sshd]
enabled = true
<% if @facts['os']['family'] == 'Debian' -%>
logpath = /var/log/auth.log
<% end -%>
<% if @facts['os']['family'] == 'RedHat' -%>
logpath = /var/log/secure
<% end -%>
<% if @facts['os']['family'] == 'Suse' -%>
logpath = /var/log/messages
<% end -%>
